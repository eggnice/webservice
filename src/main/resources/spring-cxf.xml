<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<!-- CXF webservice配置 -->
	<import resource="classpath:META-INF/cxf/cxf.xml" />

	<bean id="zzlyWsImpl" class="com.shsnc.yun.ws.service.impl.ZZLYWebServiceImpl" />
	<bean id="inMessageInterceptor" class="org.apache.cxf.interceptor.LoggingInInterceptor" />
	<bean id="outLoggingInterceptor" class="org.apache.cxf.interceptor.LoggingOutInterceptor" />
	
	<!-- 注意下面的address，这里的address的名称就是访问的WebService的name -->
	<jaxws:server id="zzlyWS" serviceClass="com.shsnc.yun.ws.service.ZZLYWebService" address="zzlyWS">
		<jaxws:serviceBean>
			<ref bean="zzlyWsImpl" />
		</jaxws:serviceBean>
	</jaxws:server>
	
	<!--测试http://localhost:8080/webservice/webservice/zzlyWS?wsdl -->

</beans>